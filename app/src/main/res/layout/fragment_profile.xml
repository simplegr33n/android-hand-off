<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="#c9deee"
    android:orientation="horizontal"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="centerCrop"
                android:src="@drawable/hands2" />

            <TextView
                android:layout_margin="2dp"
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/user_image"
                android:background="#b2cbf7f7"
                android:gravity="center"
                android:padding="6dp"
                tools:text=" @LNDsoGood " />


            <RelativeLayout
                android:layout_width="44dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/background_chat"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/circle_xml"
                    android:tint="#1df753" />

                <ImageView
                    android:id="@+id/chat_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:src="@drawable/chat_user"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>

        </RelativeLayout>



        <TextView
            android:id="@+id/created_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fed989"
            android:gravity="center"
            android:padding="2dp"
            android:text="Member Since: Aug 03 "
            android:textSize="10sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <TextView
            android:id="@+id/user_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99fe89"
            android:gravity="center"
            android:padding="2dp"
            android:text="user points"
            android:textSize="10sp"
            android:textStyle="bold" />


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">


        <LinearLayout
            android:id="@+id/user_bio"
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_marginLeft="2dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Name Nameson" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    tools:text="Vancouver, British Columbia" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/user_biography"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    tools:text="This is profile information for Name Nameson, to be filled." />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/history_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="HISTORY" />

            <Button
                android:id="@+id/full_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="FULL PROFILE" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:id="@+id/relativeLayout">

            <ImageView
                android:id="@+id/background_edit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/circle_xml"
                android:tint="#a176add7" />


            <ImageView
                android:id="@+id/edit_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:src="@drawable/edit_item"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>