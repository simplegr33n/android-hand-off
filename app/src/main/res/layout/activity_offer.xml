<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/parcel_back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/hands2"
            android:padding="8dp"/>

        <ImageView
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/back_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/header_back"
            android:padding="8dp"/>


        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>


        <ImageView
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/search_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/header_search"
            android:padding="8dp"/>


        <ImageView
            android:id="@+id/transactions_button"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/header_transactions"
            android:padding="8dp"/>

        <ImageView
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/profile_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/header_profile"
            android:padding="8dp"/>

    </LinearLayout>


    <!-- body content -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/info_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#52b1d5f7"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp">

                <!-- information about selected transaction -->

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SOME TEXT ABOUT"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PRICE" />

                <TextView
                    android:id="@+id/lender_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lender" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="24dp"
                android:background="#99555555"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contract_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:text="Make Offer?"
                    android:textColor="#ccc7c7"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/cancel_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#4dFF0000"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/cancel_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            android:src="@drawable/header_cancel"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/action_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#4d00ff26"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/action_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            android:padding="8dp"
                            android:src="@drawable/checknow"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6982e9"
                android:scaleType="centerCrop"
                android:src="@drawable/hands2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
