<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="240dp"
    android:background="#88c0ec"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">




            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="#FFFFFF"
                android:src="@drawable/hands2" />

            <RelativeLayout
                android:layout_margin="2dp"
                android:layout_alignBottom="@id/user_photo"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/background_borrow"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/circle_xml"
                    android:tint="#a176add7"/>


                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/edit_photo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:src="@drawable/edit_picture"
                    android:textStyle="bold" />

            </RelativeLayout>



        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <EditText
                android:singleLine="true"
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="LNDsoGood"
                android:hint="Username Here"
                android:textSize="10dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <TextView
            android:id="@+id/user_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99fe89"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="2dp"
            android:text="1,329"
            android:textSize="10sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <TextView
            android:id="@+id/created_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fed989"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="2dp"
            android:text="Aug 03"
            android:textSize="10sp"
            android:textStyle="italic|bold" />


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_marginLeft="2dp"
        android:layout_weight="2"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Nameson"
                android:textSize="18sp"
                android:textStyle="bold" />


            <EditText
                android:hint="Your City and State here!"
                android:id="@+id/user_location"
                android:singleLine="true"
                android:layout_below="@id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Vancouver, British Columbia"
                android:textSize="14sp"
                android:textStyle="italic" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <EditText
                android:id="@+id/user_biography"
                android:hint="A Cool Bio Here!"
                android:lines="8"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="36dp"
                tools:text="This is profile information for Name Nameson, to be filled."
                android:textSize="12dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/save_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@color/blue_button"
            android:gravity="center"
            android:padding="4dp"
            android:text="SAVE CHANGES" />

    </LinearLayout>


</LinearLayout>