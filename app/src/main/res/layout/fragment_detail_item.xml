<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_weight="1"
    android:background="@color/parcel_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:background="@color/edittext_back"
                tools:src="@drawable/test1" />

            <!-- the details area -->



            <LinearLayout
                android:id="@+id/item_description_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="24dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="12dp">




                    <LinearLayout
                        android:paddingLeft="4dp"
                        android:id="@+id/item_footer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#9e6997cf"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/item_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    tools:text="Item Name" />

                                <TextView
                                    android:id="@+id/item_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#8bee87"
                                    android:textStyle="bold"
                                    android:paddingRight="4dp"
                                    android:paddingTop="4dp"
                                    tools:text="$6.54" />




                            </LinearLayout>


                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />





                        </LinearLayout>








                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#9e6997cf"
                        android:paddingBottom="16dp">

                        <TextView
                            android:paddingLeft="4dp"
                            android:textSize="12sp"
                            android:id="@+id/item_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#f4f4f4"
                            tools:text="some text for description" />

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#9e6997cf"
                        android:paddingBottom="18dp">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:paddingRight="1dp"
                            android:paddingLeft="1dp"
                            android:text="user name"
                            android:textStyle="bold"
                            android:shadowColor="#0d0a0a"
                            android:background="#32618f"
                            android:textColor="#fafbfc"
                            android:textSize="10sp" />

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>




            <!-- the buttons -->


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/details_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:orientation="horizontal">



                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/background_details"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/circle_xml"
                                android:tint="#5483eb"/>


                            <ImageView
                                android:layout_centerInParent="true"
                                android:id="@+id/details_button"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?android:attr/selectableItemBackground"
                                android:gravity="center"
                                android:padding="4dp"
                                android:src="@drawable/details_item"
                                android:textStyle="bold" />

                        </RelativeLayout>





                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/borrow_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/background_borrow"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/circle_xml"
                                android:tint="#6ee35c"/>


                            <ImageView
                                android:layout_centerInParent="true"
                                android:id="@+id/borrow_button"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?android:attr/selectableItemBackground"
                                android:gravity="center"
                                android:src="@drawable/deactivate_item"
                                android:textStyle="bold" />

                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/edit_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/background_edit"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/circle_xml"
                                android:tint="#d5d5d5"/>


                            <ImageView
                                android:layout_centerInParent="true"
                                android:id="@+id/edit_button"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?android:attr/selectableItemBackground"
                                android:gravity="center"
                                android:padding="4dp"
                                android:src="@drawable/edit_item"
                                android:textStyle="bold" />

                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/disable_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="4dp">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/background_disable"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/circle_xml"
                                android:tint="#ed6f6f"/>

                            <ImageView
                                android:layout_centerInParent="true"
                                android:id="@+id/disable_button"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?android:attr/selectableItemBackground"
                                android:gravity="center"
                                android:padding="2dp"
                                android:src="@drawable/deactivate_item"
                                android:textStyle="bold" />

                        </RelativeLayout>



                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/background_user"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/circle_xml"
                            android:tint="#fcff48"/>

                        <ImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/user_image"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:src="@drawable/circle_xml" />






                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>