<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/test1" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:background="#b465d275"
            android:padding="4dp"
            android:text="price"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fafdff"
            android:textSize="14sp"
            android:textStyle="bold" />






        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fish name"
                android:paddingLeft="4dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#f0f0f6"
                android:background="#e2558eaa"
                android:textSize="14sp"
                android:textStyle="bold" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">


        </LinearLayout>




        </LinearLayout>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_above="@id/description"
            android:layout_width="120dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_image"
                android:layout_alignParentRight="true"
                android:paddingRight="8dp"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/circle_xml" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:paddingRight="1dp"
                android:paddingLeft="1dp"
                android:text="user name"
                android:textStyle="bold"
                android:shadowColor="#0d0a0a"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:background="#32618f"
                android:textColor="#fafbfc"
                android:textSize="10sp" />


        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5fa6a8"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:text="item description goes here"
            android:textColor="#ffffff"
            android:textSize="10sp" />


    </LinearLayout>


</LinearLayout>